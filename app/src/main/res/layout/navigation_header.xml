<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    android:backgroundTint="#363636"
    android:backgroundTintMode="add"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:background="#18242B"
        android:backgroundTint="#1C84C9FB"
        android:backgroundTintMode="add">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="251dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-41dp"
            android:contentDescription="@string/image_name"
            app:srcCompat="@drawable/ic_menu_icon_foreground" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/name_user"
            android:textColor="@color/colorWite"
            android:textSize="28sp" />

    </RelativeLayout>
</LinearLayout>